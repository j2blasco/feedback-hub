{
  "extends": [
    "./.eslintrc.generated.json"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": ["@typescript-eslint"],
  "env": {
    "node": true,
    "browser": true,
    "es2022": true,
    "jasmine": true
  },
  "ignorePatterns": [
    "dist/**",
    "node_modules/**",
    "*.js",
    "*.mjs"
  ],
  "rules": {
    // Allow console usage in specific contexts
    "no-console": "off"
  },
  "overrides": [
    {
      "files": ["**/*.spec.ts", "**/*.test.ts"],
      "env": {
        "jasmine": true,
        "jest": true
      },
      "globals": {
        "describe": "readonly",
        "it": "readonly",
        "beforeEach": "readonly",
        "afterEach": "readonly",
        "beforeAll": "readonly",
        "afterAll": "readonly",
        "expect": "readonly",
        "jasmine": "readonly",
        "spyOn": "readonly",
        "fdescribe": "readonly",
        "fit": "readonly"
      }
    }
  ]
}